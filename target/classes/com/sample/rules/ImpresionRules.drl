	then
    	$buffer.write("Abnormal pattern not found in this ECG.");
end

rule "muestra Diagnostico"
	agenda-group "Imprimir"
	salience -30
	when
		$pat: Patron()
		$buffer: BufferedWriter()
	then
    	$buffer.newLine();
       	$buffer.write($pat.getNombre());


end